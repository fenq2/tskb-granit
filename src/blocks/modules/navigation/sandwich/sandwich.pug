.sandwich
    a(href="#").sandwich__open-btn
        span.sandwich__line
        span.sandwich__line
        span.sandwich__line
    .sandwich__content
        .sandwich__header
            a(href="#").sandwich__close-btn
                +icon('close', 'sandwich__close-icon')
        nav.sandwich-nav
            ul.sandwich-nav__list
                li.sandwich-nav__item
                    a(href="#").sandwich-nav__link Главная
                li.sandwich-nav__item.sandwich-nav__item_outer
                    a(href="#").sandwich-nav__link Услуги
                    +icon('arrow', 'sandwich-nav__arrow')
                    .sandwich-outer
                        .sandwich__header
                            a(href="#").sandwich__back-btn
                                +icon('arrow', 'sandwich__back-icon')
                            a(href="#").sandwich__close-btn
                                +icon('close', 'sandwich__close-icon')
                        ul.sandwich-outer__list
                            li.sandwich-nav__item
                                a(href="#").sandwich-nav__link Энергоаудит
                            li.sandwich-nav__item
                                a(href="#").sandwich-nav__link Разработка программ энергосбережения
                            li.sandwich-nav__item
                                a(href="#").sandwich-nav__link Тепловизионное обследование
                            li.sandwich-nav__item
                                a(href="#").sandwich-nav__link Устройства молниезащиты и заземления
                            li.sandwich-nav__item
                                a(href="#").sandwich-nav__link Монтажные работы
                li.sandwich-nav__item
                    a(href="#").sandwich-nav__link Лицензия
                li.sandwich-nav__item
                    a(href="#").sandwich-nav__link О нас
                li.sandwich-nav__item
                    a(href="#").sandwich-nav__link Задать вопрос
                li.sandwich-nav__item
                    a(href="#").sandwich-nav__link Контакты
        .sandwich-block
            span.sandwich-block__title Информация
            .sandwich-block__content
                .header-block
                    +icon('location', 'header-block__icon')
                    p.header-block__text г.Одинцово, ул.Западная, д.13
                .header-block
                    +icon('timetable', 'header-block__icon')
                    p.header-block__text Ежедневно с 09:00 до 18:00